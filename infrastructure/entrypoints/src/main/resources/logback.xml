<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender: Logs to the console with colors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Root Logger: Logs INFO level and above to the console only -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>